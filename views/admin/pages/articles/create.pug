extends ../../layouts/default

block main
    div(style="background-color: white; width: 100%;  padding: 20px;")
        h1(class="mb-4") Add new article

        form(
            action=`${prefixAdmin}/articles/create`
            id="form-create-article"
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="title") Title
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required
                )
            div(class="form-group")
                label(for="category") Category
                select(class="form-control" id="category" name="category" required)
                    option(value="") -- Chọn danh mục --
                    option(value="NATURE") NATURE
                    option(value="ANIMAL") ANIMAL
                    option(value="SCIENCE") SCIENCE
                    option(value="HISTORY") HISTORY
                    option(value="GEOGRAPHY") GEOGRAPHY
            div(class="form-group")
                label(for="desc") Description
                textarea(
                    class="form-control"
                    id="desc"
                    name="description"
                    rows="5"
                    required
                )
            div(class="form-group")
                label(for="content") Content
                textarea(
                    class="form-control"
                    id="content"
                    name="content"
                    rows="5"
                    required
                )
            
            div(class="form-group"
                upload-image
            )
                label(for="thumbnail") Image
                input(
                    type="file"
                    class="form-control-file"
                    id="thumbnail"
                    name="thumbnail"
                    accept="image/*"
                    upload-image-input
                )
                
            div(class="form-group")
                label(for="position") Position
                input(
                    type="number"
                    class="form-control"
                    id="position"
                    name="position"
                    placeholder="Auto increase"
                    min="1"
                )
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked
                )
                label(for="statusActive" class="form-check-label") Active

            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInactive"
                    name="status"
                    value="inactive"
                )
                label(for="statusInactive" class="form-check-label") Inactive

            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Create new
